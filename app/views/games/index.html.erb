<h1 class="current-genre"> <%= params[:genre] %></h1>
<% if @games.count == 0 %>
    <h1> There are currently no games </h1>
<% else %> 


<div class="row my-row">
<% @games.each do |game| %>
   
<% if game.avatar.attached? %>
<div class="card my-card" >
        <img class="img-fluid" src="<%=(url_for(game.avatar))%>">
    <div class="card-body">
        <p class="card-text"><%= game.developer %></p>
       
        <button type="button" class="btn btn-primary" > 
        <%= link_to game.title, game_path(game), class: "white-color"%>
        </button>

    </div>
</div>

<% end %>
<% end %>
</div>
<% end %>

